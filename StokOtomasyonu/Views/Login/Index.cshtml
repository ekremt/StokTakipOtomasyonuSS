
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2 class=" text-center mt-lg-2">Personel Giriş </h2>
<div class="container">
    <div class="row">
        <div class="col-lg-4  offset-lg-4 mt-lg-5 col-12">
            <form ng-controller="LoginController">
                <div class="form-group">
                    <label for="KullaniciAdi">Kullanıcı Adı</label>
                    <input type="text" ng-model="user.kullanici_adi" required autofocus class="form-control " id="KullaniciAdi">
                    <span style="color:red" ng-show="user.UserEmail.$dirty || Submited  && user.kullanici_adi.$error.required">Lütfen Kullanıcı Adını giriniz.</span>
                </div>
                <div class="form-group">
                    <label for="Sifre">Şifre</label>
                    <input type="password" ng-model="user.sifre" class="form-control" id="Sifre">
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" value="remember" ng-model="user.remember" class="form-check-input" id="remember">
                    <label class="form-check-label" for="remember">Hatırla</label>
                </div>
                {{master | json}}
                <button type="submit" ng-click="login(user)" class="btn btn-primary col-lg-10 offset-lg-1">Giriş</button>
            </form>
        </div>
    </div>
</div>
<script src="~/Scripts/js/angular/LoginController.js"></script>