

<div class="modal fade" id="IsyeriEditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form name="editForm" ng-submit="editFormSubmit(itemInModal)">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">İşyeri Güncelleme</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">


                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="isyeri_adi"> İşyeri Adı</label>
                            <input name="isyeri_adi" min="3" maxlength="30" type="text" ng-model="itemInModal.isyeri_adi" required autofocus class="form-control" id="isyeri_adi">
                            <span class=" text-white rounded-pill absolute-validation" ng-show="editForm.isyeri_adi.$touched && editForm.isyeri_adi.$invalid">Lütfen  İşyeri Adı giriniz.</span>
                        </div>
                        
                    </div>
                  
                    
                   



                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-outline-info">Düzenle</button>
                </div>
            </form>
        </div>

    </div>
</div>